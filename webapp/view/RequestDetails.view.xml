        <footer>
            <Toolbar>
                <ToolbarSpacer />
                <Button
                    type="Emphasized"
                    text="Submit"
                    press="onSubmitPress"
                />
                <Button
                    text="Cancel"
                    type="Reject"
                    press="onCancelPress"
                />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
