<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
>
    <Dialog
        id="AdHocDialog"
        title="{i18n>AdHocDetails}"
        draggable="true"
        resizable="true"
        contentWidth="80%"
        contentHeight="90%"
    >
        <Table
            id="invoiceDetailTable"
            items="{adHocModel>/}"
            width="100%"
            growing="true"
        >
             
            <columns>
                <Column>
                    <header>
                        <Label text="{i18n>DocumentNo}" />
                    </header>
                </Column>
                <Column hAlign="Center">
                    <header>
                        <Label text="{i18n>InvoiceDate}" />
                    </header>
                </Column>
                <Column hAlign="End">
                    <header>
                        <Label text="{i18n>DocumentAmount}" />
                    </header>
                </Column>

                <Column hAlign="End">
                    <header>
                        <Label text="{i18n>ApprovalAmount}" />
                    </header>
                </Column>
                <Column hAlign="End">
                    <header>
                        <Label text="{i18n>InvoiceNo}" />
                    </header>
                </Column>
                <Column>
                    <header>
                        <Label text="{i18n>Remark}" />
                    </header>
                </Column>
            </columns>

            <items>
                <ColumnListItem type="Active">
                    <cells>
                        <Text text="{adHocModel>Docnr}" />
                        <Text
                            text="{path: 'adHocModel>Budat', formatter: '.formatDate'}"
                        />
                        <Text
                            text="{path:'adHocModel>DocAmt',formatter: '.formatAmount'}"
                        />
                        <Text
                            text="{path:'adHocModel>ApprovalAmt',formatter: '.formatAmount'}"
                        />
                        <Text text="{adHocModel>Xblnr}" />
                        <Text text="{adHocModel>Sgtxt}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        <endButton>
            <Button
                text="Ok"
                press="onCancelDialog"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
